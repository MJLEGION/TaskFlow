# TaskFlow Staging Environment Configuration

# Environment
NODE_ENV=staging
PORT=3000

# Database
DATABASE_URL=postgresql://taskflow_staging:staging_password@staging-db:5432/taskflow_staging

# Redis Cache
REDIS_URL=redis://staging-redis:6379

# Authentication
JWT_SECRET=staging-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_BASE_URL=https://taskflow-staging.herokuapp.com
FRONTEND_URL=https://taskflow-staging.herokuapp.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Security
CORS_ORIGIN=https://taskflow-staging.herokuapp.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
SMTP_HOST=smtp.staging.example.com
SMTP_PORT=587
SMTP_USER=staging@taskflow.com
SMTP_PASS=staging-smtp-password

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=false