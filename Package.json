{
  "name": "taskflow",
  "version": "1.0.0",
  "description": "Personal Project Management Hub - A streamlined project management tool for individual developers and small teams",
  "main": "index.js",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "start": "npm run start --workspace=backend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "npm run format --workspaces",
    "format:check": "npm run format:check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migrate": "npm run migrate --workspace=backend",
    "seed": "npm run seed --workspace=backend"
  },
  "keywords": [
    "project-management",
    "task-tracking",
    "time-logging",
    "productivity",
    "react",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "Michael George",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MJLEGION/TaskFlow.git"
  },
  "bugs": {
    "url": "https://github.com/MJLEGION/TaskFlow/issues"
  },
  "homepage": "https://github.com/MJLEGION/TaskFlow#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "private": true
}